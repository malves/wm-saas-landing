<div class="w-full max-w-md space-y-8">
  <div class="space-y-2">
    <h1 class="text-3xl sm:text-4xl font-bold text-center">Créez votre compte</h1>
      <p class="text-center text-muted">Rejoignez Landing Hub et gérez vos campagnes</p>
  </div>

  <!-- Flash messages -->
  <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
    <div class="p-4 bg-red-50 border border-red-200 rounded-xl">
      <ul class="list-disc list-inside text-red-800 text-sm">
        <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <form method="POST" action="/auth/register" class="space-y-4">
    <div class="space-y-2">
      <label class="block text-muted text-sm font-semibold tracking-wide">Nom complet</label>
      <div class="flex items-center gap-3 bg-[#F4F5F7] rounded-xl px-4 py-3 border border-transparent focus-within:bg-white focus-within:border-border transition">
        <svg class="w-5 h-5 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
        </svg>
        <input 
          type="text" 
          name="name" 
          value="<%= typeof formData !== 'undefined' ? (formData.name || '') : '' %>"
          placeholder="Prénom Nom" 
          class="flex-1 bg-transparent outline-none text-primary placeholder:text-muted"
          required
        >
      </div>
    </div>

    <div class="space-y-2">
      <label class="block text-muted text-sm font-semibold tracking-wide">Email professionnel</label>
      <div class="flex items-center gap-3 bg-[#F4F5F7] rounded-xl px-4 py-3 border border-transparent focus-within:bg-white focus-within:border-border transition">
        <svg class="w-5 h-5 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
        </svg>
        <input 
          type="email" 
          name="email" 
          value="<%= typeof formData !== 'undefined' ? (formData.email || '') : '' %>"
          placeholder="prenom@entreprise.com" 
          class="flex-1 bg-transparent outline-none text-primary placeholder:text-muted"
          required
        >
      </div>
    </div>

    <div class="space-y-2">
      <label class="block text-muted text-sm font-semibold tracking-wide">Mot de passe</label>
      <div class="flex items-center gap-3 bg-[#F4F5F7] rounded-xl px-4 py-3 border border-transparent focus-within:bg-white focus-within:border-border transition">
        <svg class="w-5 h-5 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
        </svg>
        <input 
          type="password" 
          name="password" 
          placeholder="••••••••" 
          class="flex-1 bg-transparent outline-none text-primary placeholder:text-muted"
          required
          minlength="6"
        >
      </div>
    </div>

    <div class="space-y-2">
      <label class="block text-muted text-sm font-semibold tracking-wide">Confirmer le mot de passe</label>
      <div class="flex items-center gap-3 bg-[#F4F5F7] rounded-xl px-4 py-3 border border-transparent focus-within:bg-white focus-within:border-border transition">
        <svg class="w-5 h-5 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <input 
          type="password" 
          name="confirmPassword" 
          placeholder="••••••••" 
          class="flex-1 bg-transparent outline-none text-primary placeholder:text-muted"
          required
          minlength="6"
        >
      </div>
    </div>

    <button 
      type="submit" 
      class="w-full bg-primary text-white font-semibold py-3 rounded-xl hover:bg-primary/90 transition"
    >
      Créer mon compte
    </button>
  </form>

  <p class="text-center text-muted text-sm">
    Déjà inscrit ? 
    <a href="/auth/login" class="text-primary font-semibold hover:underline">Se connecter</a>
  </p>
</div>

