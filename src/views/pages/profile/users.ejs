<%
  const formatDate = (dateString) => {
    if (!dateString) return '—';
    return new Date(dateString).toLocaleDateString('fr-FR', {
      day: '2-digit',
      month: 'short',
      year: 'numeric'
    });
  };

  const getRoleLabel = (role) => {
    const labels = {
      admin: { label: 'Administrateur', class: 'bg-red-100 text-red-800' },
      user: { label: 'Utilisateur', class: 'bg-blue-100 text-blue-800' }
    };
    return labels[role] || { label: role, class: 'bg-gray-100 text-gray-800' };
  };
%>

<!-- Header -->
<div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4 mb-8">
  <div>
    <div class="flex items-center gap-2 text-sm text-muted mb-2">
      <a href="/profile" class="hover:text-primary">Profil</a>
      <span>/</span>
      <span class="text-primary font-medium">Utilisateurs</span>
    </div>
    <h1 class="text-3xl md:text-4xl font-bold">Gestion des utilisateurs</h1>
    <p class="text-muted text-sm mt-2 max-w-2xl">
      Gérez les comptes utilisateurs de votre équipe et contrôlez les accès à la plateforme.
    </p>
  </div>
  <div class="flex flex-wrap items-center gap-3">
    <a href="/profile/users/create" class="px-4 py-2 rounded-xl bg-primary text-white font-semibold hover:bg-primary/90 transition text-sm">
      Créer un utilisateur
    </a>
  </div>
</div>

<div class="space-y-8">
  <!-- Users Table -->
  <section class="bg-card border border-border rounded-[32px] p-6 md:p-8 space-y-6">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
      <div>
        <p class="text-xs uppercase tracking-[0.4em] text-muted">Équipe</p>
        <h3 class="text-2xl font-semibold">Membres actifs</h3>
      </div>
      <div class="flex gap-2 text-xs uppercase tracking-[0.25em]">
        <button class="px-4 py-2 rounded-full border border-border text-muted">Exporter</button>
        <button class="px-4 py-2 rounded-full bg-primary text-white">Inviter</button>
      </div>
    </div>

    <% if (users.length === 0) { %>
      <div class="text-center py-12">
        <svg class="w-16 h-16 mx-auto text-muted mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
        </svg>
        <p class="text-muted text-lg">Aucun utilisateur trouvé</p>
      </div>
    <% } else { %>
      <div class="overflow-x-auto rounded-3xl border border-border">
        <table class="min-w-full text-sm">
          <thead class="bg-background text-muted uppercase text-xs tracking-[0.35em]">
            <tr>
              <th class="px-6 py-4 text-left">Utilisateur</th>
              <th class="px-6 py-4 text-left">Email</th>
              <th class="px-6 py-4 text-left">Rôle</th>
              <th class="px-6 py-4 text-left">Inscription</th>
              <th class="px-6 py-4 text-left">Dernière connexion</th>
              <th class="px-6 py-4 text-right">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-border">
            <% users.forEach(listUser => {
              const roleConfig = getRoleLabel(listUser.role);
            %>
              <tr class="hover:bg-background/50 transition">
                <td class="px-6 py-5">
                  <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center">
                      <span class="text-primary font-semibold text-sm">
                        <%= listUser.name.split(' ').map(n => n.charAt(0)).join('').toUpperCase() %>
                      </span>
                    </div>
                    <div>
                      <p class="font-semibold"><%= listUser.name %></p>
                      <p class="text-muted text-xs">ID: <%= listUser.id %></p>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-5">
                  <p class="font-medium"><%= listUser.email %></p>
                </td>
                <td class="px-6 py-5">
                  <span class="px-3 py-1 rounded-full text-xs font-semibold <%= roleConfig.class %>">
                    <%= roleConfig.label %>
                  </span>
                </td>
                <td class="px-6 py-5 text-muted">
                  <%= formatDate(listUser.createdAt) %>
                </td>
                <td class="px-6 py-5 text-muted">
                  <%= listUser.updatedAt ? formatDate(listUser.updatedAt) : 'Jamais' %>
                </td>
                <td class="px-6 py-5 text-right">
                  <div class="flex items-center justify-end gap-2">
                    <a href="/profile/users/<%= listUser.id %>/edit" class="text-primary font-semibold underline-offset-4 hover:underline text-xs uppercase tracking-[0.3em]">
                      Modifier
                    </a>
                    <% if (listUser.id !== user?.id) { %>
                      <button class="text-danger hover:text-danger/80 font-semibold text-xs uppercase tracking-[0.3em]">
                        Supprimer
                      </button>
                    <% } %>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </section>

  <!-- Quick Stats -->
  <section class="grid gap-4 md:grid-cols-3">
    <article class="bg-card border border-border rounded-3xl p-6 space-y-3">
      <p class="text-xs uppercase tracking-[0.3em] text-muted">Total utilisateurs</p>
      <h3 class="text-3xl font-semibold"><%= users.length %></h3>
      <p class="text-xs text-success">Comptes actifs</p>
    </article>

    <article class="bg-card border border-border rounded-3xl p-6 space-y-3">
      <p class="text-xs uppercase tracking-[0.3em] text-muted">Administrateurs</p>
      <h3 class="text-3xl font-semibold"><%= users.filter(u => u.role === 'admin').length %></h3>
      <p class="text-xs text-muted">Accès complet</p>
    </article>

    <article class="bg-card border border-border rounded-3xl p-6 space-y-3">
      <p class="text-xs uppercase tracking-[0.3em] text-muted">Utilisateurs standards</p>
      <h3 class="text-3xl font-semibold"><%= users.filter(u => u.role === 'user').length %></h3>
      <p class="text-xs text-muted">Accès limité</p>
    </article>
  </section>
</div>
