<!-- Page Header -->
<div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-8">
  <div>
    <p class="text-sm text-muted">Librairies</p>
    <h1 class="text-3xl font-bold">Mes Librairies HTML</h1>
    <p class="text-muted text-sm mt-2">Gérez vos pages HTML, assets et fichiers pour vos campagnes.</p>
  </div>
  <div class="flex flex-wrap items-center gap-3">
    <a href="/libraries/create" class="px-4 py-2 rounded-xl bg-primary text-white font-semibold hover:bg-primary/90 transition">
      Nouvelle librairie
    </a>
  </div>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
  <div class="bg-card rounded-2xl p-6 border border-border">
    <p class="text-xs uppercase tracking-widest text-muted mb-2">Total</p>
    <p class="text-3xl font-bold"><%= stats.total %></p>
    <p class="text-sm text-muted mt-1">librairies</p>
  </div>
  <div class="bg-card rounded-2xl p-6 border border-border">
    <p class="text-xs uppercase tracking-widest text-muted mb-2">Fichiers</p>
    <p class="text-3xl font-bold text-success"><%= stats.totalFiles %></p>
    <p class="text-sm text-muted mt-1">total des assets</p>
  </div>
</div>

<!-- Libraries Grid -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
  <% libraries.forEach((library, index) => {
    const colors = ['blue', 'green', 'purple', 'orange', 'red'];
    const color = colors[index % 5];
    const fileCount = library.files ? library.files.length : 0;
  %>
    <div class="bg-card rounded-xl border border-border shadow-sm hover:shadow-lg hover:-translate-y-0.5 transition p-6 flex flex-col gap-4">
      <div class="w-16 h-16 bg-<%= color %>-50 rounded-xl flex items-center justify-center mx-auto">
        <svg class="w-8 h-8 text-<%= color %>-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
        </svg>
      </div>
      
      <div class="text-center">
        <p class="font-semibold text-base mb-1"><%= library.name %></p>
        <p class="text-muted text-xs"><%= fileCount %> fichier(s)</p>
      </div>
      
      <div class="flex items-center gap-2 mt-auto text-sm font-semibold">
        <a href="/libraries/<%= library.id %>" class="flex-1 text-center text-primary hover:underline">Voir</a>
        <span class="text-muted">·</span>
        <form method="POST" action="/libraries/<%= library.id %>/delete" onsubmit="return confirm('Supprimer cette librairie ?')" class="flex-1">
          <button type="submit" class="w-full text-center text-danger hover:underline">
            Supprimer
          </button>
        </form>
      </div>
    </div>
  <% }) %>
</div>

<% if (libraries.length === 0) { %>
  <div class="text-center py-12 bg-card rounded-2xl border border-border">
    <svg class="w-16 h-16 text-muted mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
    </svg>
    <p class="text-muted mb-4">Aucune librairie trouvée</p>
    <a href="/libraries/create" class="inline-block px-6 py-3 bg-primary text-white rounded-xl font-semibold hover:bg-primary/90 transition">
      Créer votre première librairie
    </a>
  </div>
<% } %>
