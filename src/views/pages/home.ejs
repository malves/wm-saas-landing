<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- Left Column (2/3) -->
  <div class="lg:col-span-2 space-y-6">
    <!-- Hero Section (affiché uniquement si aucune landing page) -->
    <% if (landingPages.length === 0) { %>
    <section class="relative bg-primary rounded-3xl p-8 md:p-12 overflow-hidden">
      <div class="relative z-10">
        <h1 class="text-3xl md:text-4xl font-bold mb-4 max-w-md text-white">Gérez vos Landing Pages</h1>
        <p class="text-white/60 mb-6 max-w-sm">Créez des pages de conversion performantes et collectez des leads qualifiés</p>
        <div class="flex flex-wrap gap-4">
          <a href="/landingpages/create" class="bg-white text-primary px-6 py-3 rounded-xl font-semibold hover:bg-gray-100 transition">
            Créer une page
          </a>
          <a href="/leads/create" class="border border-white/30 text-white px-6 py-3 rounded-xl font-semibold hover:bg-white/10 transition">
            Ajouter un lead
          </a>
        </div>
      </div>
      <!-- Decorative Elements -->
      <div class="absolute right-0 top-0 bottom-0 w-1/2 opacity-20">
        <div class="absolute right-10 top-10 w-32 h-32 bg-white/30 rounded-2xl rotate-12"></div>
        <div class="absolute right-20 bottom-10 w-24 h-24 bg-white/20 rounded-full"></div>
        <div class="absolute right-40 top-20 w-16 h-16 bg-white/10 rounded-xl -rotate-12"></div>
      </div>
    </section>
    <% } %>

    <!-- Active Landing Pages Section -->
    <section>
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-bold">Landing Pages récentes</h2>
        <a href="/landingpages" class="text-muted text-sm hover:text-primary transition">Voir tout</a>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        <% landingPages.sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt)).slice(0, 3).forEach((landingPage, index) => {
          const colors = ['red', 'blue', 'green'];
          const color = colors[index % 3];
        %>
          <!-- Landing Page Card <%= index + 1 %> -->
          <div class="bg-card rounded-2xl p-4 shadow-sm hover:shadow-md transition">
            <div class="relative mb-4">
              <div class="aspect-square rounded-xl overflow-hidden relative bg-<%= color %>-50 flex items-center justify-center">
                <div class="text-center">
                  <div class="text-<%= color %>-600 font-black text-xl mb-1"><%= landingPage.name.toUpperCase() %></div>
                  <div class="w-12 h-1 bg-<%= color %>-600 mx-auto rounded-full"></div>
                </div>
              </div>
              <div class="absolute top-3 left-3 bg-white/90 backdrop-blur px-3 py-1 rounded-lg text-sm font-medium text-primary">
                <%= landingPage.visitors %> visites
              </div>
            </div>
            <h3 class="font-semibold mb-1"><%= landingPage.name %></h3>
            <p class="text-muted text-sm mb-3">Taux de conversion</p>
            <div class="flex items-center justify-between">
              <span class="font-bold text-lg text-success"><%= landingPage.conversionRate %>%</span>
              <a href="/landingpages/<%= landingPage.id %>" class="bg-primary hover:bg-primary/90 text-white px-4 py-2 rounded-xl text-sm font-semibold transition">
                VOIR STATS
              </a>
            </div>
          </div>
        <% }) %>
      </div>
    </section>

    <!-- Top Performing Landing Pages Section -->
    <section>
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-bold">Meilleures performances</h2>
        <a href="/landingpages" class="text-muted text-sm hover:text-primary transition">Voir tout</a>
      </div>
      <div class="bg-card rounded-2xl overflow-hidden shadow-sm">
        <table class="w-full">
          <thead>
            <tr class="text-muted text-sm border-b border-border">
              <th class="text-left px-4 py-4 font-medium">Landing Page</th>
              <th class="text-left px-4 py-4 font-medium hidden sm:table-cell">Visiteurs</th>
              <th class="text-left px-4 py-4 font-medium hidden md:table-cell">Conversion</th>
              <th class="text-left px-4 py-4 font-medium hidden lg:table-cell">Statut</th>
              <th class="text-left px-4 py-4 font-medium">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% landingPages.sort((a, b) => (b.conversionRate || 0) - (a.conversionRate || 0)).slice(0, 5).forEach((landingPage, index) => {
              const colors = ['red', 'blue', 'green', 'purple', 'orange'];
              const color = colors[index % 5];
              const statusLabel = landingPage.status === 'published' ? 'Publiée' : (landingPage.status === 'draft' ? 'Brouillon' : 'En pause');
            %>
              <tr class="border-b border-border/50 hover:bg-background/50 transition">
                <td class="px-4 py-4">
                  <div class="flex items-center gap-3">
                    <div class="w-12 h-12 min-w-[48px] min-h-[48px] bg-<%= color %>-50 rounded-xl flex items-center justify-center hidden sm:flex">
                      <div class="text-center">
                        <div class="text-<%= color %>-600 font-black text-sm"><%= landingPage.name.charAt(0).toUpperCase() %></div>
                      </div>
                    </div>
                    <div>
                      <p class="font-semibold"><%= landingPage.name %></p>
                      <p class="text-muted text-sm hidden lg:block"><%= landingPage.description ? landingPage.description.substring(0, 50) + '...' : '' %></p>
                    </div>
                  </div>
                </td>
                <td class="px-4 py-4 hidden sm:table-cell">
                  <div class="flex items-center gap-1">
                    <svg class="w-4 h-4 text-blue-500" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
                    </svg>
                    <span class="font-medium"><%= landingPage.visitors %></span>
                  </div>
                </td>
                <td class="px-4 py-4 text-success font-medium hidden md:table-cell"><%= landingPage.conversionRate %>%</td>
                <td class="px-4 py-4 hidden lg:table-cell">
                  <span class="bg-success/10 text-success px-2 py-1 rounded-full text-xs font-medium"><%= statusLabel %></span>
                </td>
                <td class="px-4 py-4">
                  <div class="relative inline-block">
                    <button
                      type="button"
                      class="text-gray-500 hover:text-blue-600 p-2 rounded-lg hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-primary/20"
                      onclick="toggleActionMenu(this, event)"
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M6 10a2 2 0 11-4 0 2 2 0 014 0zM12 10a2 2 0 11-4 0 2 2 0 014 0zM16 12a2 2 0 100-4 2 2 0 000 4z"/>
                      </svg>
                    </button>
                    <div class="action-menu absolute right-0 top-full mt-1 w-40 bg-white border border-gray-200 rounded-lg shadow-lg z-[9999]" style="display:none;">
                      <a href="/landingpages/<%= landingPage.id %>" class="flex items-center gap-2 px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-lg">
                        <svg class="w-4 h-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                        </svg>
                        Voir Stats
                      </a>
                    </div>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </section>

  </div>

  <!-- Right Column (1/3) - Latest Landing Pages -->
  <div class="lg:col-span-1">
    <section class="bg-card rounded-2xl p-6 shadow-sm sticky top-8">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-bold">Pages publiées</h2>
        <a href="/landingpages" class="text-muted text-sm hover:text-primary transition">Voir tout</a>
      </div>
      <div class="space-y-3">
        <% landingPages.forEach(landingPage => { %>
          <!-- Landing Page -->
          <div class="bg-background rounded-lg p-3 border border-border hover:border-primary/30 transition">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 bg-gray-100 rounded-lg flex items-center justify-center">
                  <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold text-sm"><%= landingPage.name %></p>
                  <p class="text-muted text-xs"><%= landingPage.visitors %> visites • <%= landingPage.conversionRate %>% conv.</p>
                </div>
              </div>
              <div class="text-right">
                <span class="bg-success/10 text-success px-2 py-0.5 rounded-full text-xs font-medium mb-1 inline-block"><%= landingPage.status === 'published' ? 'Active' : 'Brouillon' %></span>
                <p class="text-xs text-muted">2d ago</p>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </section>
  </div>
</div>
