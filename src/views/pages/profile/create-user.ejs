<!-- Header -->
<div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4 mb-8">
  <div>
    <div class="flex items-center gap-2 text-sm text-muted mb-2">
      <a href="/profile" class="hover:text-primary">Profil</a>
      <span>/</span>
      <a href="/profile/users" class="hover:text-primary">Utilisateurs</a>
      <span>/</span>
      <span class="text-primary font-medium">Créer</span>
    </div>
    <h1 class="text-3xl md:text-4xl font-bold">Créer un utilisateur</h1>
    <p class="text-muted text-sm mt-2 max-w-2xl">
      Ajoutez un nouveau membre à votre équipe et définissez ses permissions d'accès.
    </p>
  </div>
  <div class="flex flex-wrap items-center gap-3">
    <a href="/profile/users" class="px-4 py-2 rounded-xl border border-border text-muted hover:text-primary transition text-sm font-semibold">
      Retour à la liste
    </a>
  </div>
</div>

<div class="max-w-2xl">
  <!-- Flash messages -->
  <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
    <div class="p-4 bg-red-50 border border-red-200 rounded-xl mb-6">
      <ul class="list-disc list-inside text-red-800 text-sm">
        <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <div class="bg-card border border-border rounded-[32px] p-6 md:p-8">
    <form method="POST" action="/profile/users" class="space-y-6">
      <div class="grid gap-6 md:grid-cols-2">
        <div class="space-y-2">
          <label class="block text-muted text-sm font-semibold tracking-wide">Nom complet</label>
          <div class="flex items-center gap-3 bg-[#F4F5F7] rounded-xl px-4 py-3 border border-transparent focus-within:bg-white focus-within:border-border transition">
            <svg class="w-5 h-5 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            <input
              type="text"
              name="name"
              value="<%= typeof formData !== 'undefined' ? (formData.name || '') : '' %>"
              placeholder="Prénom Nom"
              class="flex-1 bg-transparent outline-none text-primary placeholder:text-muted"
              required
            >
          </div>
        </div>

        <div class="space-y-2">
          <label class="block text-muted text-sm font-semibold tracking-wide">Rôle</label>
          <div class="flex items-center gap-3 bg-[#F4F5F7] rounded-xl px-4 py-3 border border-transparent focus-within:bg-white focus-within:border-border transition">
            <svg class="w-5 h-5 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
            <select
              name="role"
              class="flex-1 bg-transparent outline-none text-primary"
              required
            >
              <option value="user" <%= typeof formData !== 'undefined' && formData.role === 'user' ? 'selected' : '' %>>Utilisateur</option>
              <option value="admin" <%= typeof formData !== 'undefined' && formData.role === 'admin' ? 'selected' : '' %>>Administrateur</option>
            </select>
          </div>
        </div>
      </div>

      <div class="space-y-2">
        <label class="block text-muted text-sm font-semibold tracking-wide">Email professionnel</label>
        <div class="flex items-center gap-3 bg-[#F4F5F7] rounded-xl px-4 py-3 border border-transparent focus-within:bg-white focus-within:border-border transition">
          <svg class="w-5 h-5 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          <input
            type="email"
            name="email"
            value="<%= typeof formData !== 'undefined' ? (formData.email || '') : '' %>"
            placeholder="prenom@entreprise.com"
            class="flex-1 bg-transparent outline-none text-primary placeholder:text-muted"
            required
          >
        </div>
      </div>

      <div class="grid gap-6 md:grid-cols-2">
        <div class="space-y-2">
          <label class="block text-muted text-sm font-semibold tracking-wide">Mot de passe</label>
          <div class="flex items-center gap-3 bg-[#F4F5F7] rounded-xl px-4 py-3 border border-transparent focus-within:bg-white focus-within:border-border transition">
            <svg class="w-5 h-5 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
            <input
              type="password"
              name="password"
              placeholder="••••••••"
              class="flex-1 bg-transparent outline-none text-primary placeholder:text-muted"
              required
              minlength="6"
            >
          </div>
        </div>

        <div class="space-y-2">
          <label class="block text-muted text-sm font-semibold tracking-wide">Confirmer le mot de passe</label>
          <div class="flex items-center gap-3 bg-[#F4F5F7] rounded-xl px-4 py-3 border border-transparent focus-within:bg-white focus-within:border-border transition">
            <svg class="w-5 h-5 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <input
              type="password"
              name="confirmPassword"
              placeholder="••••••••"
              class="flex-1 bg-transparent outline-none text-primary placeholder:text-muted"
              required
              minlength="6"
            >
          </div>
        </div>
      </div>

      <div class="flex gap-4 pt-4">
        <button
          type="submit"
          class="flex-1 bg-primary text-white font-semibold py-3 rounded-xl hover:bg-primary/90 transition"
        >
          Créer l'utilisateur
        </button>
        <a
          href="/profile/users"
          class="px-6 py-3 rounded-xl border border-border text-muted hover:text-primary transition font-semibold"
        >
          Annuler
        </a>
      </div>
    </form>
  </div>

  <!-- Info Section -->
  <div class="bg-blue-50 border border-blue-200 rounded-2xl p-6 mt-6">
    <div class="flex items-start gap-3">
      <svg class="w-6 h-6 text-blue-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <div>
        <h3 class="text-blue-900 font-semibold mb-1">À propos des rôles</h3>
        <ul class="text-blue-800 text-sm space-y-1">
          <li><strong>Administrateur :</strong> Accès complet à toutes les fonctionnalités</li>
          <li><strong>Utilisateur :</strong> Accès limité aux campagnes et leads</li>
        </ul>
      </div>
    </div>
  </div>
</div>
