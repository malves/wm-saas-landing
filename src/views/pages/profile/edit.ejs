<% const fd = formData || {}; %>

<%- include('../../partials/flash') %>

<div class="grid gap-6 lg:grid-cols-[340px,1fr]">
  <!-- Sidebar card -->
  <aside class="bg-card border border-border rounded-3xl p-6 space-y-6">
    <div class="bg-primary text-white rounded-2xl p-5 space-y-4">
      <div class="flex items-center justify-between">
        <span class="text-sm font-semibold">Complete profile</span>
        <div class="w-12 h-12 rounded-full bg-white/10 flex items-center justify-center text-lg font-bold">64%</div>
      </div>
      <p class="text-white/70 text-sm">Complete your profile to unlock all features</p>
      <button class="w-full bg-white text-primary font-semibold py-3 rounded-xl hover:bg-gray-100 transition">Verify identity</button>
    </div>

    <div class="space-y-4 text-primary">
      <div class="flex items-start gap-3">
        <span class="w-9 h-9 rounded-xl bg-background border border-border flex items-center justify-center text-primary">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
        </span>
        <div>
          <p class="font-semibold">Account Information</p>
          <p class="text-sm text-muted">Change your Account information</p>
        </div>
      </div>
      <div class="flex items-start gap-3">
        <span class="w-9 h-9 rounded-xl bg-background border border-border flex items-center justify-center text-primary">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zm0 0c-3 0-5 2-5 4v1h10v-1c0-2-2-4-5-4z"/>
          </svg>
        </span>
        <div>
          <p class="font-semibold">Password</p>
          <p class="text-sm text-muted">Change your Password</p>
        </div>
      </div>
      <div class="flex items-start gap-3">
        <span class="w-9 h-9 rounded-xl bg-background border border-border flex items-center justify-center text-primary">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8h18M3 10v6a2 2 0 002 2h14a2 2 0 002-2v-6M7 16h2"/>
          </svg>
        </span>
        <div>
          <p class="font-semibold">Payment Methods</p>
          <p class="text-sm text-muted">Add Your Card / Wallet</p>
        </div>
      </div>
      <div class="flex items-start gap-3">
        <span class="w-9 h-9 rounded-xl bg-background border border-border flex items-center justify-center text-primary">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 8a6 6 0 11-12 0 6 6 0 0112 0zM12 14v7m-4 0h8"/>
          </svg>
        </span>
        <div>
          <p class="font-semibold">Invite Your Friends</p>
          <p class="text-sm text-muted">Get $3 For Each Invitation!</p>
        </div>
      </div>
    </div>
  </aside>

  <!-- Form -->
  <section class="bg-card border border-border rounded-3xl p-6 md:p-8 space-y-6">
    <div class="flex items-center justify-between">
      <h1 class="text-2xl font-bold">Personal Informations</h1>
      <div class="flex items-center gap-3">
        <div class="w-14 h-14 rounded-full bg-gray-200 flex items-center justify-center text-xl font-bold text-muted">
          <%= (fd.name || user?.name || 'A').charAt(0) %>
        </div>
        <div>
          <p class="text-lg font-semibold text-primary"><%= fd.name || user?.name || 'Utilisateur' %></p>
          <p class="text-sm text-muted">Profil authentifié</p>
        </div>
      </div>
    </div>

    <form class="space-y-5" action="/profile" method="POST">
      <div class="grid gap-4 md:grid-cols-2">
        <div class="space-y-2">
          <label class="text-sm text-muted font-semibold">Nom complet</label>
          <input name="name" value="<%= fd.name || user?.name || '' %>" class="w-full bg-background border border-border rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-primary/10 focus:border-primary" placeholder="Joseph Ren">
        </div>
        <div class="space-y-2">
          <label class="text-sm text-muted font-semibold">Email</label>
          <input type="email" name="email" value="<%= fd.email || user?.email || '' %>" class="w-full bg-background border border-border rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-primary/10 focus:border-primary" placeholder="joseph@ren.com">
        </div>
      </div>

      <div class="grid gap-4 md:grid-cols-2">
        <div class="space-y-2">
          <label class="text-sm text-muted font-semibold">Téléphone</label>
          <input name="phone" value="<%= fd.phone || user?.phone || '' %>" class="w-full bg-background border border-border rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-primary/10 focus:border-primary" placeholder="+00 000000 000">
        </div>
        <div class="space-y-2">
          <label class="text-sm text-muted font-semibold">Apt / House Number</label>
          <input name="apt" value="<%= fd.apt || user?.apt || '' %>" class="w-full bg-background border border-border rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-primary/10 focus:border-primary" placeholder="Apt / House Number">
        </div>
      </div>

      <div class="space-y-2">
        <label class="text-sm text-muted font-semibold">Street Number</label>
        <input name="street" value="<%= fd.street || user?.street || '' %>" class="w-full bg-background border border-border rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-primary/10 focus:border-primary" placeholder="Street Number">
      </div>

      <div class="grid gap-4 md:grid-cols-2">
        <div class="space-y-2">
          <label class="text-sm text-muted font-semibold">City</label>
          <input name="city" value="<%= fd.city || user?.city || '' %>" class="w-full bg-background border border-border rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-primary/10 focus:border-primary" placeholder="City">
        </div>
        <div class="space-y-2">
          <label class="text-sm text-muted font-semibold">State</label>
          <input name="state" value="<%= fd.state || user?.state || '' %>" class="w-full bg-background border border-border rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-primary/10 focus:border-primary" placeholder="State">
        </div>
      </div>

      <div class="pt-2">
        <button type="submit" class="w-full bg-primary text-white py-4 rounded-2xl font-semibold hover:bg-primary/90 transition">Update</button>
      </div>
    </form>
  </section>
</div>

