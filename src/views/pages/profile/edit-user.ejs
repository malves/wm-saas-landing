<!-- Header -->
<div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4 mb-8">
  <div>
    <div class="flex items-center gap-2 text-sm text-muted mb-2">
      <a href="/profile" class="hover:text-primary">Profil</a>
      <span>/</span>
      <a href="/profile/users" class="hover:text-primary">Utilisateurs</a>
      <span>/</span>
      <span class="text-primary font-medium">Modifier</span>
    </div>
    <h1 class="text-3xl md:text-4xl font-bold">Modifier l'utilisateur</h1>
    <p class="text-muted text-sm mt-2 max-w-2xl">
      Mettez à jour les informations et les permissions de <%= editUser.name %>.
    </p>
  </div>
  <div class="flex flex-wrap items-center gap-3">
    <a href="/profile/users" class="px-4 py-2 rounded-xl border border-border text-muted hover:text-primary transition text-sm font-semibold">
      Retour à la liste
    </a>
  </div>
</div>

<!-- Flash messages -->
<% if (typeof flash !== 'undefined' && flash) { %>
  <div class="p-4 <%= flash.type === 'success' ? 'bg-green-50 border-green-200 text-green-800' : 'bg-red-50 border-red-200 text-red-800' %> border rounded-xl mb-6">
    <%= flash.message %>
  </div>
<% } %>

<% if (typeof errors !== 'undefined' && errors.length > 0) { %>
  <div class="p-4 bg-red-50 border border-red-200 rounded-xl mb-6">
    <ul class="list-disc list-inside text-red-800 text-sm">
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

<div class="space-y-8">
  <section class="bg-card border border-border rounded-[32px] p-6 md:p-8">
    <form method="POST" action="/profile/users/<%= editUser.id %>" class="space-y-6">
      <div class="grid gap-6 md:grid-cols-2">
        <div class="space-y-2">
          <label class="block text-muted text-sm font-semibold tracking-wide">Nom complet</label>
          <div class="flex items-center gap-3 bg-[#F4F5F7] rounded-xl px-4 py-3 border border-transparent focus-within:bg-white focus-within:border-border transition">
            <svg class="w-5 h-5 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            <input
              type="text"
              name="name"
              value="<%= formData.name || '' %>"
              placeholder="Prénom Nom"
              class="flex-1 bg-transparent outline-none text-primary placeholder:text-muted"
              required
            >
          </div>
        </div>

        <div class="space-y-2">
          <label class="block text-muted text-sm font-semibold tracking-wide">Rôle</label>
          <div class="flex items-center gap-3 bg-[#F4F5F7] rounded-xl px-4 py-3 border border-transparent focus-within:bg-white focus-within:border-border transition">
            <svg class="w-5 h-5 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
            <select
              name="role"
              class="flex-1 bg-transparent outline-none text-primary"
              required
            >
              <option value="user" <%= formData.role === 'user' ? 'selected' : '' %>>Utilisateur</option>
              <option value="admin" <%= formData.role === 'admin' ? 'selected' : '' %>>Administrateur</option>
            </select>
          </div>
        </div>
      </div>

      <div class="space-y-2">
        <label class="block text-muted text-sm font-semibold tracking-wide">Email professionnel</label>
        <div class="flex items-center gap-3 bg-[#F4F5F7] rounded-xl px-4 py-3 border border-transparent focus-within:bg-white focus-within:border-border transition">
          <svg class="w-5 h-5 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          <input
            type="email"
            name="email"
            value="<%= formData.email || '' %>"
            placeholder="prenom@entreprise.com"
            class="flex-1 bg-transparent outline-none text-primary placeholder:text-muted"
            required
          >
        </div>
      </div>

      <div class="space-y-2">
        <label class="block text-muted text-sm font-semibold tracking-wide">Téléphone</label>
        <div class="flex items-center gap-3 bg-[#F4F5F7] rounded-xl px-4 py-3 border border-transparent focus-within:bg-white focus-within:border-border transition">
          <svg class="w-5 h-5 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          <input
            type="tel"
            name="phone"
            value="<%= formData.phone || '' %>"
            placeholder="+33 6 12 34 56 78"
            class="flex-1 bg-transparent outline-none text-primary placeholder:text-muted"
          >
        </div>
      </div>

      <div class="grid gap-6 md:grid-cols-2">
        <div class="space-y-2">
          <label class="block text-muted text-sm font-semibold tracking-wide">Rue</label>
          <div class="flex items-center gap-3 bg-[#F4F5F7] rounded-xl px-4 py-3 border border-transparent focus-within:bg-white focus-within:border-border transition">
            <svg class="w-5 h-5 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <input
              type="text"
              name="street"
              value="<%= formData.street || '' %>"
              placeholder="123 Rue de la République"
              class="flex-1 bg-transparent outline-none text-primary placeholder:text-muted"
            >
          </div>
        </div>

        <div class="space-y-2">
          <label class="block text-muted text-sm font-semibold tracking-wide">Appartement</label>
          <div class="flex items-center gap-3 bg-[#F4F5F7] rounded-xl px-4 py-3 border border-transparent focus-within:bg-white focus-within:border-border transition">
            <svg class="w-5 h-5 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
            </svg>
            <input
              type="text"
              name="apt"
              value="<%= formData.apt || '' %>"
              placeholder="Apt. 4B"
              class="flex-1 bg-transparent outline-none text-primary placeholder:text-muted"
            >
          </div>
        </div>
      </div>

      <div class="grid gap-6 md:grid-cols-2">
        <div class="space-y-2">
          <label class="block text-muted text-sm font-semibold tracking-wide">Ville</label>
          <div class="flex items-center gap-3 bg-[#F4F5F7] rounded-xl px-4 py-3 border border-transparent focus-within:bg-white focus-within:border-border transition">
            <svg class="w-5 h-5 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
            </svg>
            <input
              type="text"
              name="city"
              value="<%= formData.city || '' %>"
              placeholder="Paris"
              class="flex-1 bg-transparent outline-none text-primary placeholder:text-muted"
            >
          </div>
        </div>

        <div class="space-y-2">
          <label class="block text-muted text-sm font-semibold tracking-wide">État / Région</label>
          <div class="flex items-center gap-3 bg-[#F4F5F7] rounded-xl px-4 py-3 border border-transparent focus-within:bg-white focus-within:border-border transition">
            <svg class="w-5 h-5 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <input
              type="text"
              name="state"
              value="<%= formData.state || '' %>"
              placeholder="Île-de-France"
              class="flex-1 bg-transparent outline-none text-primary placeholder:text-muted"
            >
          </div>
        </div>
      </div>

      <div class="flex gap-4 pt-4">
        <button
          type="submit"
          class="flex-1 bg-primary text-white font-semibold py-3 rounded-xl hover:bg-primary/90 transition"
        >
          Enregistrer les modifications
        </button>
        <a
          href="/profile/users"
          class="px-6 py-3 rounded-xl border border-border text-muted hover:text-primary transition font-semibold"
        >
          Annuler
        </a>
      </div>
    </form>
  </section>

  <!-- Info Section -->
  <section class="bg-blue-50 border border-blue-200 rounded-2xl p-6">
    <div class="flex items-start gap-3">
      <svg class="w-6 h-6 text-blue-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <div>
        <h3 class="text-blue-900 font-semibold mb-1">À propos de la modification</h3>
        <ul class="text-blue-800 text-sm space-y-1">
          <li><strong>Mot de passe :</strong> Le mot de passe actuel sera conservé. Pour le changer, utilisez la fonction de réinitialisation.</li>
          <li><strong>Rôle :</strong> Modifiez avec précaution les permissions d'accès.</li>
        </ul>
      </div>
    </div>
  </section>
</div>
