<div class="flex flex-col items-center justify-center min-h-[60vh] text-center">
  <div class="text-8xl mb-4">⚠️</div>
  <h1 class="text-3xl font-bold mb-4">Erreur</h1>
  <p class="text-muted mb-8 max-w-md">
    <%= error && error.message ? error.message : 'Une erreur est survenue' %>
  </p>
  <% if (error && error.stack) { %>
    <pre class="text-left bg-gray-100 p-4 rounded-xl text-xs max-w-2xl overflow-auto"><%= error.stack %></pre>
  <% } %>
  <a href="/" class="mt-8 px-6 py-3 bg-primary text-white rounded-xl font-semibold hover:bg-primary/90 transition">
    Retour à l'accueil
  </a>
</div>

