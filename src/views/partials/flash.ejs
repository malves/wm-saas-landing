<% if (typeof errors !== 'undefined' && errors && errors.length > 0) { %>
  <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded-xl">
    <ul class="list-disc list-inside text-red-800">
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

