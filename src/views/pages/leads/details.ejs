<!-- Header avec retour et actions -->
<div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-8">
  <div class="flex items-center gap-4">
    <a href="/leads" class="p-2 rounded-xl hover:bg-background transition">
      <svg class="w-6 h-6 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
    </a>
    <div>
      <p class="text-sm text-muted">Lead #<%= lead.id %></p>
      <h1 class="text-3xl font-bold"><%= lead.fullName %></h1>
      <% 
        let statusClass = 'bg-blue-100 text-blue-800';
        let statusLabel = 'Nouveau';
        if (lead.status === 'qualified') {
          statusClass = 'bg-warning/10 text-warning';
          statusLabel = 'Qualifié';
        } else if (lead.status === 'converted') {
          statusClass = 'bg-success/10 text-success';
          statusLabel = 'Converti';
        } else if (lead.status === 'lost') {
          statusClass = 'bg-danger/10 text-danger';
          statusLabel = 'Perdu';
        }
      %>
      <span class="inline-block mt-2 px-3 py-1 rounded-full text-xs font-medium <%= statusClass %>">
        <%= statusLabel %>
      </span>
    </div>
  </div>
  <div class="flex flex-wrap items-center gap-3">
    <button onclick="toggleEditMode()" id="editButton" class="px-4 py-2 rounded-xl border border-primary text-primary font-semibold hover:bg-primary hover:text-white transition text-sm">
      Modifier
    </button>
    <form method="POST" action="/leads/<%= lead.id %>/delete" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce lead ?')" class="inline">
      <button type="submit" class="px-4 py-2 rounded-xl border border-danger text-danger font-semibold hover:bg-danger hover:text-white transition text-sm">
        Supprimer
      </button>
    </form>
  </div>
</div>

<!-- Formulaire d'édition -->
<form method="POST" action="/leads/<%= lead.id %>/update" id="leadForm">

<!-- Grille de contenu -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  
  <!-- Colonne principale (2/3) -->
  <div class="lg:col-span-2 space-y-6">
    
    <!-- Informations personnelles -->
    <div class="bg-card rounded-2xl border border-border p-6">
      <div class="flex items-center gap-3 mb-6">
        <div class="p-3 rounded-xl bg-primary/10">
          <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
        </div>
        <h2 class="text-xl font-bold">Informations personnelles</h2>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label class="text-sm text-muted mb-1 block">Prénom</label>
          <p class="font-semibold view-mode"><%= lead.firstName || '—' %></p>
          <input type="text" name="firstName" value="<%= lead.firstName || '' %>" class="edit-mode hidden w-full px-4 py-2 rounded-xl border border-border focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition">
        </div>
        <div>
          <label class="text-sm text-muted mb-1 block">Nom</label>
          <p class="font-semibold view-mode"><%= lead.lastName || '—' %></p>
          <input type="text" name="lastName" value="<%= lead.lastName || '' %>" class="edit-mode hidden w-full px-4 py-2 rounded-xl border border-border focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition">
        </div>
        <div>
          <label class="text-sm text-muted mb-1 block">Email</label>
          <a href="mailto:<%= lead.email %>" class="font-semibold text-primary hover:underline view-mode block">
            <%= lead.email %>
          </a>
          <input type="email" name="email" value="<%= lead.email || '' %>" class="edit-mode hidden w-full px-4 py-2 rounded-xl border border-border focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition">
        </div>
        <div>
          <label class="text-sm text-muted mb-1 block">Téléphone</label>
          <% if (lead.phone) { %>
            <a href="tel:<%= lead.phone %>" class="font-semibold text-primary hover:underline view-mode block">
              <%= lead.phone %>
            </a>
          <% } else { %>
            <p class="font-semibold view-mode">—</p>
          <% } %>
          <input type="tel" name="phone" value="<%= lead.phone || '' %>" class="edit-mode hidden w-full px-4 py-2 rounded-xl border border-border focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition">
        </div>
      </div>
    </div>

    <!-- Adresse -->
    <div class="bg-card rounded-2xl border border-border p-6">
      <div class="flex items-center gap-3 mb-6">
        <div class="p-3 rounded-xl bg-purple-500/10">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
        </div>
        <h2 class="text-xl font-bold">Adresse</h2>
      </div>
      
      <div class="space-y-4">
        <div>
          <label class="text-sm text-muted mb-1 block">Rue</label>
          <p class="font-semibold view-mode"><%= lead.address || '—' %></p>
          <input type="text" name="address" value="<%= lead.address || '' %>" class="edit-mode hidden w-full px-4 py-2 rounded-xl border border-border focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition">
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="text-sm text-muted mb-1 block">Code postal</label>
            <p class="font-semibold view-mode"><%= lead.postalCode || '—' %></p>
            <input type="text" name="postalCode" value="<%= lead.postalCode || '' %>" class="edit-mode hidden w-full px-4 py-2 rounded-xl border border-border focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition">
          </div>
          <div>
            <label class="text-sm text-muted mb-1 block">Ville</label>
            <p class="font-semibold view-mode"><%= lead.city || '—' %></p>
            <input type="text" name="city" value="<%= lead.city || '' %>" class="edit-mode hidden w-full px-4 py-2 rounded-xl border border-border focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition">
          </div>
        </div>
      </div>
    </div>

    <!-- Champs personnalisés -->
    <% if (lead.customFields && Object.keys(lead.customFields).length > 0) { %>
    <div class="bg-card rounded-2xl border border-border p-6">
      <div class="flex items-center gap-3 mb-6">
        <div class="p-3 rounded-xl bg-green-500/10">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
        </div>
        <h2 class="text-xl font-bold">Champs personnalisés</h2>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% Object.entries(lead.customFields).forEach(([key, value]) => { %>
          <div class="p-4 rounded-xl bg-background border border-border">
            <p class="text-sm text-muted mb-1"><%= key %></p>
            <p class="font-semibold"><%= value %></p>
          </div>
        <% }) %>
      </div>
    </div>
    <% } %>

  </div>

  <!-- Colonne latérale (1/3) -->
  <div class="space-y-6">
    
    <!-- Métadonnées -->
    <div class="bg-card rounded-2xl border border-border p-6">
      <h3 class="font-bold mb-4">Informations système</h3>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <p class="text-sm text-muted mb-1">ID</p>
          <p class="font-mono text-sm font-semibold">#<%= lead.id %></p>
        </div>
        <div>
          <p class="text-sm text-muted mb-1">Date de création</p>
          <p class="text-sm font-semibold">
            <% if (lead.createdAt) { %>
              <%= new Date(lead.createdAt).toLocaleDateString('fr-FR', { day: '2-digit', month: 'long', year: 'numeric' }) %>
            <% } else { %>
              —
            <% } %>
          </p>
        </div>
      </div>
    </div>

    <!-- Campagnes sources -->
    <div class="bg-card rounded-2xl border border-border p-6">
      <div class="flex items-center gap-2 mb-4">
        <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
        </svg>
        <h3 class="font-bold">Campagnes sources</h3>
      </div>
      
      <% if (lead.campaigns && lead.campaigns.length > 0) { %>
        <div class="space-y-2">
          <% lead.campaigns.forEach(campaign => { %>
            <a href="/landingpages/<%= campaign.id %>" class="block p-3 rounded-xl bg-background hover:bg-primary/5 border border-border hover:border-primary transition group">
              <div class="flex items-center justify-between">
                <p class="font-semibold text-sm group-hover:text-primary transition"><%= campaign.name %></p>
                <svg class="w-4 h-4 text-muted group-hover:text-primary transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            </a>
          <% }) %>
        </div>
      <% } else { %>
        <p class="text-sm text-muted">Aucune campagne source</p>
      <% } %>
    </div>

    <!-- Actions rapides -->
    <div class="bg-gradient-to-br from-primary/10 to-purple-500/10 rounded-2xl border border-primary/20 p-6">
      <h3 class="font-bold mb-4">Actions rapides</h3>
      <div class="space-y-3">
        <a href="mailto:<%= lead.email %>" class="flex items-center gap-3 p-3 rounded-xl bg-white hover:bg-primary hover:text-white transition group">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          <span class="font-semibold text-sm">Envoyer un email</span>
        </a>
        <% if (lead.phone) { %>
        <a href="tel:<%= lead.phone %>" class="flex items-center gap-3 p-3 rounded-xl bg-white hover:bg-primary hover:text-white transition group">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          <span class="font-semibold text-sm">Appeler</span>
        </a>
        <% } %>
      </div>
    </div>

  </div>

</div>

<!-- Boutons d'actions en mode édition -->
<div id="editActions" class="hidden mt-6 flex gap-3 justify-end">
  <button type="button" onclick="toggleEditMode()" class="px-6 py-3 rounded-xl border border-border text-muted font-semibold hover:bg-background transition">
    Annuler
  </button>
  <button type="submit" class="px-6 py-3 rounded-xl bg-primary text-white font-semibold hover:bg-primary/90 transition">
    Sauvegarder
  </button>
</div>

</form>

<script>
  let isEditMode = false;

  function toggleEditMode() {
    isEditMode = !isEditMode;
    
    const viewElements = document.querySelectorAll('.view-mode');
    const editElements = document.querySelectorAll('.edit-mode');
    const editButton = document.getElementById('editButton');
    const editActions = document.getElementById('editActions');
    
    if (isEditMode) {
      // Mode édition
      viewElements.forEach(el => el.classList.add('hidden'));
      editElements.forEach(el => el.classList.remove('hidden'));
      editButton.classList.add('hidden');
      editActions.classList.remove('hidden');
    } else {
      // Mode lecture
      viewElements.forEach(el => el.classList.remove('hidden'));
      editElements.forEach(el => el.classList.add('hidden'));
      editButton.classList.remove('hidden');
      editActions.classList.add('hidden');
    }
  }
</script>
